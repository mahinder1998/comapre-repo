 <div class="product_card">
   <a href="{{ product.url}}" class="product-link"></a>
   <div class="product_img homepage__feature-products__imgbox">
     <img class="homepage__feature-products__img lazy" src="https://cdn.shopify.com/s/files/1/0575/8517/2679/files/placeholder-lazyload.jpg?v=1628709506" data-src="{{ product.featured_image | product_img_url: 'original' }}" alt="{{ product.title | escape }}" />

   </div>
   <div class="product_desc">
    {% comment %}
    {% if product.tags contains 'new' %}
    <div class="product-tag-mob">
      <span>New</span>
    </div>
    {% endif %}
    {% endcomment %}

    <div class="hm-wraper">
      {% if product.tags contains 'new' %}
      <div class="product-tag home-desk_tp">New</div>
      {%endif%}
    </div>

    <div class="hm-wraper">
      {% if product.tags contains 'best-seller' %}
      <div class="product-tag home-desk_tp">Best seller</div>
      {%endif%}
    </div>

    <div class="hm-wraper">
      {% if product.tags contains 'exclusively_online' %}
      <div class="product-tag home-desk_tp">Exclusively Online</div>
      {%endif%}
    </div>
    
    <div class="hm-wraper">
      {% if product.tags contains 'sale' %}
      <div class="product-tag home-desk_tp">sale</div>
      {%endif%}
    </div>


    <h4 class="product_title">{{ product.title}}</h4>
    <div class="product_reviews"></div>
    <div class="product_price">
      {% render 'price' , product: product %}
    </div>
  </div>
</div>  