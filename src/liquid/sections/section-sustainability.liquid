{% if section.settings.video %}
<div class="sustainbility-video">
          <video id="hp-video" autoplay muted loop playsinline autoplay>
            <source src="{{ section.settings.video }}" type="video/mp4">
          </video>
</div>
{%endif%}

<div class="sustainability">
  
  <div class="journal-intro-section">
    {% if section.settings.heading %}
    <h1 class="intro-title">{{section.settings.heading}}</h1> 
    {%endif%}
    {% if section.settings.sub_heading %}
    <h2 class="intro-sub-title">{{section.settings.sub_heading}}</h2>
    {%endif%}
    {% if section.settings.min_text %}
    <div class="time-duartion">              
      <div class="time-circle ">{{section.settings.min_text}}</div>              
    </div> 
    {%endif%}
    {% if section.settings.description %}
    <div class="intro-page-desc"> 
      <p>{{section.settings.description}}</p>
    </div>
    {%endif %}
  </div>
  
  <ul>
    <li>
      {% if section.settings.block1_img %}
      <div class="image-pic">
        <img src="{{section.settings.block1_img | img_url: "424x424"}}">
      </div>
      {%endif%}
      {% if section.settings.block1_desc or section.settings.block1_heading %}
      <div class="story-content">
        {% if section.settings.block1_heading %}
        <h3>{{section.settings.block1_heading}}</h3>
        {%endif%}
        {% if section.settings.block1_desc %}
        	<p>{{section.settings.block1_desc}}</p>
        {%endif%}
      </div>
      {%endif%}
    </li>
    <li>
      {% if section.settings.block2_img %}
