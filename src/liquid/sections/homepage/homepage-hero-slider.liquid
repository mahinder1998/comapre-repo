            "label": "Mobile banner"
          }, {
            "type": "number",
            "id": "image_mobile_width",
            "label": "Mobile Banner Width",
            "default": 1000
          }, {
            "type": "number",
            "id": "image_mobile_height",
            "label": "Mobile Banner Height",
            "default": 750
          }, {
            "type": "header",
            "content": "Banner Content"
          }, {
            "type": "select",
            "id": "content-position-english",
            "options": [
              {
                "value": "left",
                "label": "Left"
              }, {
                "value": "right",
                "label": "Right"
              }
            ],
            "label": "Content Position"
          }, {
            "type": "color",
            "id": "banner_content_bg",
            "label": "Banner Content Background"
          }, {
            "type": "text",
            "id": "title",
            "label": "Title"
          }, {
            "type": "text",
            "id": "title_arabic",
            "label": "Title - Arabic"
          }, {
            "type": "color",
            "id": "title_color",
            "label": "Title Color Desktop",
            "default": "#fff"
          }, {
            "type": "textarea",
            "id": "subtitle",
            "label": "Subtitle"
          }, {
            "type": "textarea",
            "id": "subtitle_arabic",
            "label": "Subtitle - Arabic"
          }, {
            "type": "color",
            "id": "subtitle_color",
            "label": "Subtitle Color Desktop",
            "default": "#fff"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button Text"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button link"
          }, {
            "type": "color",
            "id": "button_bg",
            "label": "button Background",
            "default": "#000"
          }, {
            "type": "color",
            "id": "button_color",
            "label": "button Color",
            "default": "#fff"
          }
        ]
      }, {
        "name": "Video",
        "type": "video",
        "settings": [
          {
            "type": "image_picker",
            "id": "video_poster_image",
            "label": "Poster image"
          },
          {
            "type": "number",
            "id": "poster_image_width",
            "label": "Poster Image Width",
            "default": 2400
          },
          {
            "type": "number",
            "id": "poster_image_height",
            "label": "Poster Image Height",
            "default": 800
          },
          {
            "type": "image_picker",
            "id": "video_poster_image_mobile",
            "label": "Poster image mobile"
          }, {
            "type": "number",
            "id": "poster_image_mobile_width",
            "label": "Poster Mobile Image Width",
            "default": 1000
          }, {
            "type": "number",
            "id": "poster_image_mobile_height",
            "label": "Poster Mobile Image Height",
            "default": 700
          }, {
            "type": "text",
            "id": "video_url_desktop",
            "label": "Desktop Video URL"
          }, {
            "type": "text",
            "id": "video_url_mobile",
            "label": "Mobile Video URL"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Homepage Hero Slider",
        "category": "Homepage Sections"
      }
    ]

  }
{% endschema %}