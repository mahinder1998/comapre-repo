{% if settings.is_privatesale == false %}

  {% comment %}
  slider banner css
  {% endcomment %}<style>
    .slide__inner_media {
      padding-top: calc({{ section.blocks[0].settings.image_mobile_height }} / {{ section.blocks[0].settings.image_mobile_width }} * 100% );
    }

    @media(min-width: 768px) {
      .slide__inner_media {
        padding-top: calc({{ section.blocks[0].settings.image_desktop_height }} / {{ section.blocks[0].settings.image_desktop_width }} * 100% );
      }
      .h__slide__info-overlay {
        background-color: {{ section.blocks[0].settings.banner_content_bg }}
        ;
      }
      .h__slide__info-overlay__title {
        color: {{ section.blocks[0].settings.title_color }}
        ;
      }
      .h__slide__info-overlay__desc {
        color: {{ section.blocks[0].settings.subtitle_color }}
        ;
      }
      .h__slide__info-overlay__cta {
        background-color: {{ section.blocks[0].settings.button_bg }}
        ;
        color: {{ section.blocks[0].settings.button_color }}
      }


    }
  </style>

  <div class="h">
    <div class="h__slider">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          {% render 'homepage-hero-slider-image' with { block: block.settings} %}
        {% endif %}

        {% if block.type == 'video' %}
          {% render 'homepage-hero-slider-video' with { block: block.settings} %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endif %}


{% schema %}
  {
    "name": "Homepage Hero Slider",
    "settings": [],
    "blocks": [
      {
        "name": "Image",
        "type": "image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Desktop Banner"
          },
          {
            "type": "number",
            "id": "image_desktop_width",
            "label": "Desktop Banner Width",
            "default": 2400
          },
          {
            "type": "number",
            "id": "image_desktop_height",
            "label": "Desktop Banner Height",
            "default": 800
          },
          {
            "type": "image_picker",
