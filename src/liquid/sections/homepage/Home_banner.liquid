<style>
	.hm-hero-banner.en {
		position: relative;
		padding-top: calc( {{ section.settings.imgepic_mbl_height }} / {{ section.settings.imgepic_mbl_width }} * 100% );
	}

	.hm-hero-banner.ar {
		position: relative;
		padding-top: calc( {{ section.settings.ar_imgepic_mbl_height }} / {{ section.settings.ar_imgepic_mbl_width }} * 100% );
	}

	@media(min-width: 750px) {
		.hm-hero-banner.en {
			padding-top: calc( {{ section.settings.imgepic_height }} / {{ section.settings.imgepic_width }} * 100% );
		}

		.hm-hero-banner.ar {
			padding-top: calc( {{ section.settings.ar_imgepic_height }} / {{ section.settings.ar_imgepic_width }} * 100% );
		}
	}

	.hm-hero-banner_inner {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
	}

	picture.hm-hero-banner_picture {
		width: 100%;
		height: 100%;
		margin: 0 !important;
		padding: 0 !important;
	}
	
	.hm-hero-banner_picture_img {
		width: 100%;
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}
</style>

{% if request.locale.iso_code == 'ar' %} 
	<div class="hm-hero-banner ar">
		<a href="{{ section.settings.ar_banner_link }}" class="hm-hero-banner_inner">
			<picture class="hm-hero-banner_picture">
				<source media="(min-width:750px)" srcset="{{ section.settings.ar_imgepic | img_url:'master'}}">
				<img class="hm-hero-banner_picture_img" src="{{ section.settings.ar_imgepic_mbl | img_url:'master'}}" alt="">
			</picture>
		</a>
	</div>	
{% else %}

	<div class="hm-hero-banner en">
		<a href="{{ section.settings.banner_link }}" class="hm-hero-banner_inner">
			<picture class="hm-hero-banner_picture">
				<source media="(min-width:750px)" srcset="{{ section.settings.imgepic | img_url:'master'}}">
				<img class="hm-hero-banner_picture_img" src="{{ section.settings.imgepic_mbl | img_url:'master'}}" alt="">
			</picture>
		</a>
	</div>	
{% endif %}



