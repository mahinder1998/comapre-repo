<section class="banner-wrap">
  <div class="banner-image">
        <picture>
        <source
            data-srcset="{{ section.settings.img_desk | img_url:'master'}}"
            media="(min-width: 750px)"
            srcset= "{{ section.settings.img_desk | img_url:'master'}}"
        />
        <source
            data-srcset="{{ section.settings.img_mbl | img_url:'original'}}"
            media="(max-width: 749px)"
            srcset="{{ section.settings.img_mbl | img_url:'original'}}"
        />
        <img
            src="{{ section.settings.img_desk | img_url:'master'}}"
            data-src="{{ section.settings.img_desk | img_url:'master'}}"
        />
    </picture>
  </div>
  <div class="banner-content-wrap">
      <div class="banner-content">
        <h1 class="banner-title">{{ section.settings.heading }}</h1>
        <div class="banner-desc">
       		{{ section.settings.text }}
        </div>
        <div class="banner-cta">
          <a href="{{ section.settings.link }}" class="btn-ctm">{{ section.settings.btnlabel }}</a>
        </div>
    </div>
  </div>
  
</section>




{% schema %}
  {
    "name":"Home Banner With Overlay",
    "settings": [
      {
        "type": "image_picker",
        "id": "img_desk",
        "label": "Image Desktop"
      },
		{
        "type": "image_picker",
        "id": "img_mbl",
        "label": "Image mobile"
      },
		{
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
		{
        "type": "textarea",
        "id": "text",
        "label": "text"
      },
		{
        "type": "text",
        "id": "btnlabel",
        "label": "Button label"
      },
		{
        "type": "url",
        "id": "link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Home Banner With Overlay",
        "category": "image"
      }
    ]
  }
{% endschema %}
