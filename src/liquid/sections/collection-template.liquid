<div class="padding-zero page-container">
  <div class="collection-header">
    {% assign collection_img = false %}
    {% assign img_url = '' %}
{% for block in section.blocks %}
    {% assign coll = collections[block.settings.collection_id] %}
    {% assign colhandle = coll.handle | downcase %}
    {% assign handle = collection.handle | downcase %}
    {% if colhandle == handle %}
    {% assign collection_img = true %}
    {% assign img_url = block.settings.col_img | img_url: '2048x600' %}
    {% endif %}
 {% endfor %} 
    '
  {% if collection_img %}  
    <div class="collection-image">
        <img src="{{ img_url }}">
      {% if collection.description == blank %}
      <h1 class="collection-hero__title title_with_img">
        {{ collection.title }}
      </h1>
      {% endif %}
    </div>
{% endif %}
   
    {% if collection.description != blank %}
    <div class="collection-header-wraper">
      
      <div class="section-header">
        
       <h1 class="collection-hero__title">
          {{ collection.title }}
        </h1>
        
        {% if collection.description != blank %}
        <div class="rte collection-description">
          {{ collection.description }}
        </div>
        {% endif %}
      </div>
      
    </div>
    
    {% endif %}
{% if collection.description == blank and collection_img == false %}
     <div class="collection-header-wraper">
      
      <div class="sigle_col_title">
         <h1 class="collection-hero__title">
          {{ collection.title }}
        </h1>
       </div>
    </div>
    {% endif %}
  </div>
</div>

<div class="page-container">

  <div class="flex-bet collection-wrapper">

    <div class="side-bar-fillter">

    </div>

    <div class="custom-product-data">
      <div class="select-data">
        <select name="slct" id="slct" onchange="this.options[this.selectedIndex].value && (window.location = this.options[this.selectedIndex].value);">
          <option selected disabled>Sort By</option>
          <option value="{{shop.url}}/{{collection.url}}?sort_by=featured">Featured Products</option>
          <option value="{{shop.url}}/{{collection.url}}/latest-arrivals">Latest Arrivals</option>
          <option value="{{shop.url}}/{{collection.url}}?sort_by=best-selling">Best Sellers</option>
          <option value="{{shop.url}}/{{collection.url}}?sort_by=title-ascending">From A to Z</option>
          <option value="{{shop.url}}/{{collection.url}}?sort_by=title-descending">From Z to A</option>
          <option value="{{shop.url}}/{{collection.url}}?sort_by=price-ascending">From least expensive</option>
          <option value="{{shop.url}}/{{collection.url}}?sort_by=price-descending">From most expensive</option>
        </select>
      </div>
      {% if collection.products_count > 0 %}
      <ul class="grid-four">
        {% for product in collection.products %}
        <li class="grid-items">

          {% include 'product-card-grid' %}
        </li>
        {%endfor%}
      </ul>
      {%endif%}
    </div>

  </div>

</div>


{% schema %}
{
"name": "Section name",
"settings": [
{
"type": "checkbox",
"id": "show_feature_img",
"label": "Show Feature Image"
}
],
    "blocks": [
      {
        "type": "collection_img",
        "name": "collection image",
        "settings": [
          {
            "type": "collection",
            "id": "collection_id",
            "label": "collection"
          },
          {
          "type":"image_picker",
          "id":"col_img",
          "label":"image"
          }
        ]
      }

      
    ]
}
{% endschema %}

